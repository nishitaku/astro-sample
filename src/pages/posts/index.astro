---
import Layout from "../../layouts/Layout.astro";

interface Post {
  userId: string;
  id: number;
  title: string;
  body: string;
}

interface PostWithDate extends Post {
  date: Date
}

const response = await fetch('https://jsonplaceholder.typicode.com/posts');
const posts: Post[] = await response.json();
const postsWithDate: PostWithDate[]  = posts.map(post => {
  return {...post, date: new Date()}
});
---
<Layout title="Post一覧ページ">
  <h1>Post一覧</h1>
  <ul>
    {postsWithDate.map(post => (
      <li><a href={`/posts/${post.id}`}>{post.title} {post.date.toISOString()}</a></li>
    ))}
  </ul>
</Layout>